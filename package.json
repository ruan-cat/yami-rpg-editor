{
	"name": "yami-rpg-editor",
	"version": "1.0.0",
	"main": "main/main.js",
	"packageManager": "pnpm@10.13.1",
	"productName": "Yami RPG Editor",
	"author": "Yami",
	"description": "2D Game Editor",
	"bin": {
		"buildres": "./bin/buildres.js"
	},
	"scripts": {
		"buildres": "buildres",
		"prepare": "husky",
		"start": "electron . --dirname=Project",
		"setup": "pnpm install",
		"format": "prettier --write . --config prettierrc.json",
		"build:win": "electron-builder --dir --win --x64",
		"build:winexe": "electron-builder --win --x64",
		"build:linux": "electron-builder --dir --linux --x64",
		"build:linuxexe": "electron-builder --linux --x64",
		"build:mac": "electron-builder --dir --mac --x64",
		"build:macexe": "electron-builder --mac --x64",
		"build:macArm": "electron-builder --dir --mac --arm64",
		"build:macArmexe": "electron-builder --mac --arm64",
		"build:universal": "electron-builder --dir --mac --universal",
		"build:universalexe": "electron-builder --mac --universal"
	},
	"devDependencies": {
		"@types/node": "^22.13.10",
		"archiver": "^7.0.1",
		"electron": "^20.3.12",
		"electron-builder": "^25.1.8",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"prettier": "^3.6.2"
	},
	"dependencies": {
		"axios": "^1.11.0",
		"exceljs": "^4.4.0",
		"fs-extra": "^11.3.1",
		"koa": "^3.0.0",
		"mime-types": "^3.0.1",
		"qrcode": "^1.5.4",
		"sharp": "^0.34.2",
		"steamworks.js": "^0.4.0",
		"typescript": "^5.8.2",
		"xml2js": "^0.6.2",
		"yauzl": "^3.2.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/yami-pro/yami-rpg-editor.git"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"electron",
			"sharp"
		]
	},
	"lint-staged": {
		"*.{js,css}": [
			"prettier --write --config .prettierrc.json --ignore-path .prettierignore",
			"git add -u"
		]
	},
	"build": {
		"appId": "com.open.yami.rpgeditor",
		"electronVersion": "20.3.12",
		"directories": {
			"buildResources": "Assets",
			"output": "./build"
		},
		"files": [
			{
				"from": "Project",
				"to": ".",
				"filter": [
					"**",
					"!config.json",
					"!Templates/**/*",
					"!Apk/**/*"
				]
			},
			"main/*.js",
			"package.json"
		],
		"extraResources": [
			{
				"from": "node_modules/typescript/lib",
				"to": "app/node_modules/typescript/lib"
			},
			{
				"from": "Project/Templates/electron-win-x64/resources/app/node_modules",
				"to": "app/Templates/electron-win-x64/resources/app/node_modules"
			},
			{
				"from": "Project/Templates/electron-mac-universal.app/Contents/resources/app/node_modules",
				"to": "app/Templates/electron-mac-universal.app/Contents/resources/app/node_modules"
			}
		],
		"asar": false,
		"asarUnpack": [
			"node_modules/typescript/lib",
			"Project/Templates/electron-win-x64/resources/app/node_modules",
			"Project/Templates/electron-mac-universal.app/Contents/resources/app/node_modules"
		],
		"extraFiles": [],
		"nsis": {
			"oneClick": false,
			"allowElevation": true,
			"allowToChangeInstallationDirectory": true,
			"shortcutName": "Open Yami RPG Editor",
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true
		},
		"win": {
			"icon": "icon.ico",
			"executableName": "Open Yami RPG Editor",
			"verifyUpdateCodeSignature": false,
			"target": [
				"nsis"
			]
		},
		"mac": {
			"icon": "icon.icns",
			"x64ArchFiles": "*",
			"target": [
				"dmg",
				"zip"
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			]
		}
	}
}
